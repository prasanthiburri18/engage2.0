<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
<Properties>
    <Property name="logger-path">logs/PatientMicroservice</Property>
    <Property name="archive">${logger-path}/archive</Property>
</Properties>
  

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
 		<SMTP name="Mail" subject="Error Report" to="s.krishna@mindtechlabs.com" from="s.krishna@mindtechlabs.com" 
			smtpHost="email-smtp.us-east-1.amazonaws.com" smtpPort="587" bufferSize="50" smtpUsername="AKIAI3IFZU63TJO2ARHQ" 
			smtpPassword="AmZN3vjwhcSK8Ko9bR0oO0JDR4JX2JSNp52ONGLJ42Q9"> </SMTP> 
	 	<RollingFile name="RollingFile-Appender" fileName="${logger-path}/rollingfile.log"
			filePattern="${archive}/rollingfile.log.%d{yyyy-MM-dd-hh-mm}.gz">
			<PatternLayout
				pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="30 MB" />
			</Policies>
			<DefaultRolloverStrategy max="30" />
		</RollingFile>
 
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console" />
	<!-- 		<AppenderRef ref="RollingFile-Appender" /> -->
		</Root>
		<Logger name="com.engage" level="info" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="Mail" />
		<!-- 	<AppenderRef ref="RollingFile-Appender" /> -->
		</Logger>
<!-- 		<Logger name="com.engage" level="info" additivity="false">
			<AppenderRef ref="RollingFile-Appender" />
		</Logger> -->
		
	</Loggers>
</Configuration>